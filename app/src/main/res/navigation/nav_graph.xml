<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/welcomeFragment">

    <fragment
        android:id="@+id/welcomeFragment"
        android:name="com.nguyencodervn.klad07_navigationjetpack.WelcomeFragment"
        android:label="fragment_welcome"
        tools:layout="@layout/fragment_welcome" >
        <action
            android:id="@+id/action_welcomeFragment_to_inputFragment"
            app:destination="@id/inputFragment"
            app:enterAnim="@anim/slide_out" />
    </fragment>
    <fragment
        android:id="@+id/inputFragment"
        android:name="com.nguyencodervn.klad07_navigationjetpack.InputFragment"
        android:label="fragment_input"
        tools:layout="@layout/fragment_input" >
        <action
            android:id="@+id/action_inputFragment_to_messageFragment"
            app:destination="@id/messageFragment" />
    </fragment>
    <fragment
        android:id="@+id/messageFragment"
        android:name="com.nguyencodervn.klad07_navigationjetpack.MessageFragment"
        android:label="fragment_message"
        tools:layout="@layout/fragment_message" >
        <action
            android:id="@+id/action_messageFragment_to_exitActivity"
            app:destination="@id/exitActivity" />
        <argument
            android:name="message"
            android:defaultValue="No Name" />
    </fragment>
    <activity
        android:id="@+id/exitActivity"
        android:name="com.nguyencodervn.klad07_navigationjetpack.ExitActivity"
        android:label="activity_exit"
        tools:layout="@layout/activity_exit" />
</navigation>